{% import 'SigBundle:Macros:nav.config.twig' as menu %}

<section class="hero is-dark is-medium is-bold">
    <!-- Hero header: will stick at the top -->
    <div class="hero-head">
        <header class="nav">
            <div class="container">
                <div class="nav-left">
                    {% if nav.active_path is not defined %}
                        <a class="nav-item is-active" href="{{ path('sig_homepage') }}">
                            Síníu
                        </a>
                    {% else %}
                        <a class="nav-item" href="{{ path('sig_homepage') }}">
                            Síníu
                        </a>
                    {% endif %}
                </div>
                <span class="nav-toggle">
          <span></span>
          <span></span>
          <span></span>
        </span>
                <div class="nav-right nav-menu">
                    {% if nav.active_path is not defined %}
                        {{ menu.navConfig() }}
                    {% else %}
                        {{ menu.navConfig(nav.active_path) }}
                    {% endif %}
                </div>
            </div>
        </header>
    </div>

    <!-- Hero content: will be in the middle -->
    <div class="hero-body">
        <div class="container has-text-centered">
            {% if nav.title is defined %}
                <h1 class="title is-1">
                    {{ nav.title }}
                </h1>
            {% endif %}
            {% if nav.subtitle is defined %}
                <h2 class="subtitle">
                    {{ nav.subtitle }}
                </h2>
            {% endif %}
        </div>
    </div>
</section>